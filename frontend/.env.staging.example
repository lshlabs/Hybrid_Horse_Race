VITE_FIREBASE_API_KEY=your-staging-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-staging-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-staging-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-staging-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
VITE_FIREBASE_APP_ID=1:000000000000:web:example
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Staging deploy must use real Firebase services
VITE_USE_FIREBASE_EMULATOR=false
VITE_ENABLE_MOCK_ROOM_FALLBACK=false

# Emulator values are ignored in production builds, but kept for local DEV parity
VITE_FIREBASE_FUNCTIONS_EMULATOR_HOST=127.0.0.1
VITE_FIREBASE_FUNCTIONS_EMULATOR_PORT=5001
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=127.0.0.1
VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8081
